[filter-app:main]
use = egg:fanstatic#fanstatic
recompute_hashes = false
versioning = true
bottom = true
minified = true
next = mapping 


[filter:session]
use = egg:cromlech.wsgistate#file_session
session_key = gatekeeper.session
cache = ${buildout:directory}/sessions


[app:gatekeeper]
use = egg:gatekeeper#keeper
name = gatekeeper
dburl = sqlite:///${buildout:directory}/admin.db
pubkey = ${buildout:directory}/identity/server.pub
zcml_file = ${zcml:output}
portals = ${buildout:directory}/portals.ini


[app:timeout]
use = egg:gatekeeper#timeout


[app:unauthorized]
use = egg:gatekeeper#unauthorized


[app:loginform]
use = egg:gatekeeper#login
pkey = ${buildout:directory}/identity/server.key
dest = http://gk.novareto.de
dburl = sqlite:///${buildout:directory}/admin.db
dbkey = gatekeeper.admin


[app:admin]
use = egg:gatekeeper#admin
pkey = ${buildout:directory}/identity/server.key
dburl = sqlite:///${buildout:directory}/admin.db
dbkey = gatekeeper.admin


[app:mapping]
use = egg:Paste#urlmap
filter-with = session
/ = gatekeeper
/login = loginform
/timeout = timeout
/admin = admin
/unauthorized = unauthorized


[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 8082
